{% trans_default_domain 'FOSUserBundle' %}

{% if error %}
    <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
{% endif %}
    <div style="background-image:url({{ asset('img/media.jpg') }});height: 100%;padding-bottom: 0" class="columns">
        <div style="margin-top: 50px; margin-bottom: 50px;" class="centered">
            <div style="border-radius: 15px;padding: 10px;" class="card">
                <div class="card-image centered">
                    <img src="{{ asset('img/pilot_logo.png') }}" class="img-responsive">
                </div>
                <div class="card-header centered">
                    <div class="card-title h3">Sign In</div>
                </div>
                <div class="divider"></div>
                <div class="card-body">
                    <form style="background-color: white;width: 100%;" action="{{ path("fos_user_security_check") }}" method="post" class="column col-3 col-xs-12 col-mx-auto">
                        {% if csrf_token %}
                            <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
                        {% endif %}
                        <div class="form-group">
                            <label class="form-label" for="username">{{ 'security.login.username'|trans }}</label>
                            <input class="form-input" placeholer="{{ 'security.login.username'|trans }}" type="text" id="username" name="_username" value="{{ last_username }}" required="required" placeholder="{{ 'security.login.username'|trans }}"/>
                        </div>
                        <div class="form-group">
                            <label class="form-label" for="password">{{ 'security.login.password'|trans }}</label>
                            <input class="form-input" placeholder="{{ 'security.login.password'|trans }}" type="password" id="password" name="_password" required="required" />
                        </div>
                        <div class="form-group">
                            <label class="form-checkbox" for="remember_me">
                                <input type="checkbox" id="remember_me" name="_remember_me" value="on" >
                                <i class="form-icon"></i> {{ 'security.login.remember_me'|trans }}
                            </label>
                        </div>
                        <div class="form-group">
                            <input class="btn btn-primary" type="submit" id="_submit" name="_submit" value="{{ 'security.login.submit'|trans }}" />
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>