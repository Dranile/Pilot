<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8" />
        <title>{% block title %}Welcome!{% endblock %}</title>
        {% block stylesheets %}{% endblock %}
        <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />
    </head>
    <body>
        <header class="navbar p-2">
            <section class="navbar-section">
                <a href="{{ path('homepage') }}" class="navbar-brand mr-2"><img src="{{ asset('img/pilot_logo.png') }}" alt="logo"/></a>
                <div class="input-group input-inline">
                    <input class="form-input" type="text" placeholder="{{ 'search'|trans }}">
                    <button class="btn btn-primary input-group-btn">{{ 'Search'|trans }}</button>
                </div>
            </section>
            <section class="navbar-section">
            {% if is_granted("IS_AUTHENTICATED_REMEMBERED") %}
                {{ 'layout.logged_in_as'|trans({'%username%': app.user.username}, 'FOSUserBundle') }} |
                <a href="{{ path('fos_user_security_logout') }}">
                    {{ 'layout.logout'|trans({}, 'FOSUserBundle') }}
                </a>
            {% else %}
                    <a href="{{ path('fos_user_registration_register') }}" class="btn btn-link">{{ 'layout.register'|trans({}, 'FOSUserBundle') }}</a>
                    <span>{{ 'or'|trans }}</span>
                    <a href="{{ path('fos_user_security_login') }}" class="btn btn-link">{{ 'layout.login'|trans({}, 'FOSUserBundle') }}</a>
            {% endif %}
            </section>
        </header>
        {# A Modifier !!! #}
        <a href="{{ path('new_serie') }}">Ajouter s√©rie</a>
        <a href="{{ path('new_article') }}">Ajouter article</a>
        {% block body %}{% endblock %}
        {% block javascripts %}{% endblock %}
    </body>
</html>
