{% extends 'base.html.twig' %}

{% block title %}{{ 'home'|trans }}{% endblock %}

{% block body %}
    {% if results|length == 0 %}
        <div class="columns">
            <div class="col-sm-12 col-6 col-mx-auto">
                <div class="empty">
                    <div class="empty-icon">
                        <i class="icon icon-2x icon-message"></i>
                    </div>
                    <p class="empty-title h5">{{ 'noArticle-title'|trans }}</p>
                    <p class="empty-subtitle">{{ 'noArticle-subtitle'|trans }}</p>
                </div>
            </div>
        </div>
    {% else %}
        <div style="margin: 10px;margin-left: auto;margin-right: auto;" class="col-8">
        {% for article in results %}
                <div class="columns">
                    {% if article.serie and article.serie.imageUrl %}
                        <div class="column col-4">
                            <img class="img-responsive" src="{{ article.serie.imageUrl }}"/>
                        </div>
                    {% endif %}
                    <div class="column col-mx-auto">
                        <h5>{{ article.title }}</h5>
                        <div class="text-gray">
                            {{ article.publishedDate | date("d/M/Y H:i") }} - {{ article.user.username }}
                        </div>
                    </div>
                </div>
                <div class="column col-mx-auto">
                    <p>{{ article.content|raw }}</p>
                    {% if article.serie %}
                        <span class="chip"><a class="text-primary" href="#">{{ article.serie.name }}</a></span>
                        {% if article.seasonNumber %}
                            <span class="chip"><a class="text-primary" href="#">{{ 'season'|trans }} {{ article.seasonNumber }}</a></span>
                        {% endif %}
                    {% endif %}
                    <div class="float-right">
                        <a href="{{ path('article_show', {'urlAlias': article.urlAlias}) }}">{{ 'read-more'|trans }}</a>
                    </div>
                </div>
                <div style="border-width: 1px; border-color: black;" class="divider"></div>
        {% endfor %}
        </div>
        {% if pagination != null %}
            {% if pagination.nbPages > 0 %}
                <div class="flex-center">
                    <ul class="pagination">
                        <li class="page-item {% if pagination.page == 1 %} disabled{% endif %}">
                            <a href="{{ url('homepage') ~ '?page=' ~ (pagination.page-1) ~ '&nbArticle=' ~ pagination.nbArticles }}">{{ 'previous'|trans }}</a>
                        </li>
                        {% if pagination.page-2 > 1 %}
                            <li class="page-item">
                                <a href="{{ url('homepage') ~ '?page=1&nbArticle=' ~ pagination.nbArticles }}">1</a>
                            </li>
                            {% if pagination.page-3 > 1 %}
                                <li class="page-item">
                                    <span>...</span>
                                </li>
                            {% endif %}
                        {% endif %}
                        {% for p in range(max(pagination.page-2, 1), min(pagination.page+2, pagination.nbPages)) %}
                            <li class="page-item {% if p == pagination.page %}active{% endif %}">
                                <a href="{{ url('homepage') ~ '?page=' ~ p ~ '&nbArticle=' ~ pagination.nbArticles }}">
                                    {{ p }}
                                </a>
                            </li>
                        {% endfor %}
                        {% if pagination.page+2 < pagination.nbPages %}
                            {% if pagination.page+3 < pagination.nbPages %}
                                <li class="page-item">
                                    <span>...</span>
                                </li>
                            {% endif %}
                            <li class="page-item">
                                <a href="{{ url('homepage') ~ '?page=' ~ pagination.nbPages ~ '&nbArticle=' ~ pagination.nbArticles }}">{{ pagination.nbPages }}</a>
                            </li>
                        {% endif %}
                        <li class="page-item {% if pagination.page == pagination.nbPages %}disabled{% endif %}">
                            <a href="{{ url('homepage') ~ '?page=' ~ (pagination.page+1) ~ '&nbArticle=' ~ pagination.nbArticles }}">{{ 'next'|trans }}</a>
                        </li>
                    </ul>
                    </div>
                </div>
            {% endif %}
        {% endif %}
    {% endif %}
{% endblock %}
